<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:text="Request Blood ðŸ©¸"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Fill in the details to request blood units."
                android:textSize="14sp"
                android:textColor="#777"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Select Blood Group -->
            <TextView
                android:text="Select Blood Group"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_marginTop="12dp">

                <!-- Blood Group Buttons -->
                <!-- Reusable style -->
                <!-- A+ -->
                <Button
                    android:text="A+"
                    android:layout_margin="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"/>

                <Button
                    android:text="A-"
                    android:layout_margin="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"/>

                <Button
                    android:text="B+"
                    android:layout_margin="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"/>

                <Button
                    android:text="B-"
                    android:layout_margin="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"/>

                <Button
                    android:text="AB+"
                    android:layout_margin="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"/>

                <Button
                    android:text="AB-"
                    android:layout_margin="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"/>

                <Button
                    android:text="O+"
                    android:layout_margin="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"/>

                <Button
                    android:text="O-"
                    android:layout_margin="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"/>
            </GridLayout>

            <!-- Units Required -->
            <TextView
                android:text="Units Required (ml)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:inputType="number"
                android:hint="Enter units"
                android:backgroundTint="#E0E0E0"/>

            <!-- Hospital Location -->
            <TextView
                android:text="Hospital Location"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/edit_text"
                android:hint="Search here"
                android:padding="12dp"
                android:drawableStart="@android:drawable/ic_media_previous"
                android:drawableEnd="@android:drawable/ic_btn_speak_now"
                android:backgroundTint="#E0E0E0"/>

            <!-- Urgency -->
            <TextView
                android:text="Urgency"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:text="Normal"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFF"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:layout_height="48dp"/>

                <Button
                    android:text="Urgent"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:layout_height="48dp"/>

                <Button
                    android:text="Immediate"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <!-- Submit Button -->
            <Button
                android:text="Submit Request"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:backgroundTint="#B71C1C"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
